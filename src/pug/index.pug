  -
    var itemsLeadings = [
      {videoLink: "https://www.youtube.com/embed/TNwfr313Tsg", imgPlug: "plug-ea.jpg", imgAlt: "Ведущий Евгений Александров", caption: captionEa},
      {videoLink: "https://www.youtube.com/embed/aMVRM9ZzuGk", imgPlug: "plug-lc.jpg", imgAlt: "Ведущий Лев Читков", caption: captionLc}
    ]
  -var leadingsVideo = {idUl: "leadings-video", classUl: "columns", items: itemsLeadings}

block content
  +fb-root()
  +jumping-buttons()
  +y-metrica(44743726)
  header.header
    +orderCall()
    .wrap.microphone
      +menu()
      h1.h1-indent.center
        strong Аренда караоке, ведущий и диджей музыканты на Ваше мероприятие<br />в Москве и области
      h2.center#karaoke Комплекты караоке
      .columns
        .columns__column
          h3.center Стандарт
          img(src="../img/standart.png", alt="Стандарт", srcset="")
          ul.columns__set
            li.columns__item
              <strong>Караоке</strong> более 150 000 песен
            li.columns__item Акустическая система 1000 вт
            li.columns__item Микшерный пульт
            li.columns__item 2 микрофона shure 58
            li.columns__item Проектор и экран "170 см
            li.columns__item
              <strong>Dj/Звукорежиссер</strong> 6 ч.
            li.columns__item Вокальная обработка
            li.columns__item -
            li.columns__item -
            li.columns__item -
          p.columns__price.center Цена: 14900 ₽
        .columns__column
          h3.center Максимум
          img(src="../img/max.png", alt="Максимум", srcset="")
          ul.columns__set
            li.columns__item
              <strong>Караоке</strong> более 150 000 песен
            li.columns__item Акустическая система 1000 вт
            li.columns__item Микшерный пульт
            li.columns__item 2 микрофона shure 58
            li.columns__item Проектор и экран "170 см
            li.columns__item
              <strong>Dj/Звукорежиссер</strong> 6 ч.
            li.columns__item Вокальная обработка
            li.columns__item Бэквокалист
            li.columns__item Сабвуфер
            li.columns__item Свет и дым машина
          p.columns__price.center Цена: 19900 ₽
  .sets
    .wrap
      h2.center#dj Комплекты DJ
      .columns
        .columns__column.columns__vertical
          img(src="../img/dj.jpg", alt="dj", class="columns__img-size")
          p.columns__p-decor.center
            <strong>DJ</strong> + НОУТБУК / 6ч
          .columns__p-decor.center Цена: 9900 ₽
        .columns__column.columns__vertical
          img(src="../img/leading.jpg", alt="leading", class="columns__img-size")
          p.columns__p-decor.center
            <strong>DJ</strong> + ЗВУК + СВЕТ / 6ч<br />ДО 100 ЧЕЛОВЕК
          .columns__p-decor.center Цена: 14900 ₽
        .columns__column.columns__vertical
          img(src="../img/individual.jpg", alt="individual", class="columns__img-size")
          p.columns__p-decor.center
            <strong>DJ</strong> + ЗВУК + СВЕТ + ШОУ<br />КОЛИЧЕСТВО НЕОГРАНИЧЕННО
          .columns__p-decor.center Индивидуально
      +video-gallery(karaokeVideo)
  .leadings
    .wrap
      h2.center#leading Ведущие
      +video-gallery(leadingsVideo)
        
  .footer
    .wrap
      h2.center#portfolio Наше портфолио
      .columns.slide-show#lightgallery
        +galleryImg('img', 30)
      h3.center#comments Отзывы
      .comments
        div(
          class="fb-comments"
          data-href="https://djkaraoke.ru/"
          data-width="100%"
          data-numposts="5"
        )
      .contacts
        h3.center Контакты
        ul
          li.contacts__item E-mail: <a class="white-link" href="mailto:e.alexandrov177@yandex.ru">e.alexandrov177@yandex.ru</a>
