  -
    var itemsKaraoke = [
      {videoLink: "https://www.youtube.com/embed/VtqUC3rvhks", imgPlug: "plug.jpg", imgAlt: "Караоке"},
      {videoLink: "https://www.youtube.com/embed/bAYPViYuTGs", imgPlug: "plug2.jpg", imgAlt: "Караоке"}
